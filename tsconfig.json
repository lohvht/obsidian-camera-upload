{
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": ".",
    "inlineSourceMap": false,
    "inlineSources": false,
    "module": "nodenext",
    "target": "ES6",
    "allowJs": false,
    "noImplicitAny": true,
    "moduleResolution": "nodenext",
    "importHelpers": true,
    "isolatedModules": true,
    "strict": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ]
  },
  "include": [
    "**/*.ts"
  ]
}
